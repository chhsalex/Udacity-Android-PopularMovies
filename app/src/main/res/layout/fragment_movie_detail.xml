<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_movie_detail"
    tools:context="com.alex.nanoproj.popularmovies.MovieDetailActivityFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/text_title"
            style="@style/DetailFragmentStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/title_height"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorDetailTitleBg"
            android:textSize="30sp"
            android:textColor="@color/colorWhite"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/DetailFragmentStyle"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/image_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DetailFragmentStyle"
                android:adjustViewBounds="true"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/DetailFragmentStyle"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/text_release_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    />
                <TextView
                    android:id="@+id/text_vote_avarage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="16sp"
                    />
                <CheckBox
                    android:id="@+id/button_add_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/colorBtnFavorite"
                    android:text="@string/button_mark_favorite"
                    android:textSize="16sp"
                    />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/text_plot_synopsis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailFragmentStyle"
            android:textSize="16sp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorDivider"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailFragmentStyle"
            android:text="@string/label_trailers"
            android:textSize="24sp"
            />
        <com.alex.nanoproj.popularmovies.widget.ExpandedListView
            android:id="@+id/list_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            style="@style/DetailFragmentStyle"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorDivider"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/DetailFragmentStyle"
            android:text="@string/label_reviews"
            android:textSize="24sp"
            />
        <com.alex.nanoproj.popularmovies.widget.ExpandedListView
            android:id="@+id/list_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:scrollbars="none"
            style="@style/DetailFragmentStyle"/>

    </LinearLayout>
</ScrollView>
